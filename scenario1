#!/usr/bin/env python3

import sys

def minitrice():
    try:
        "Scénario 1: Entrée intérative"
        while True:
            # Saisie expression
            expression = input("> ")
            # Evaluation de l'expression
            resultat = eval(expression)
            print(resultat)
    except EOFError:
        # Affichage du message d'au revoir
        print("\nFin des calculs :)")
        
if __name__ =="__main__":
    minitrice()
